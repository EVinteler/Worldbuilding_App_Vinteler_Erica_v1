<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Worldbuilding_App_Vinteler_Erica_v1.ListPage">
    <ContentPage.Content >
        <StackLayout Margin="20">
            <Editor Placeholder="Enter the name of the world."
                    Text="{Binding WorldName}"
                    HeightRequest="40">
            </Editor>
            <Editor Placeholder="Enter the description of the world."
                    Text="{Binding WorldLore}"
                    HeightRequest="200">
            </Editor>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save" Clicked="OnWorldSaveButtonClicked" />
                <Button Grid.Column="1" Text="Delete" Clicked="OnWorldDeleteButtonClicked"/>

                <ListView Grid.Row="1" Grid.ColumnSpan="2" x:Name="listView" Margin="20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Detail="{Binding WorldName}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>