<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Worldbuilding_App_Vinteler_Erica_v1.ListEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add World" Clicked="OnWorldAddedClicked" />
        <ToolbarItem Text="Add Story" Clicked="OnStoryAddedClicked" />
        <ToolbarItem Text="Add Character" Clicked="OnCharacterAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listViewStory" Margin="20" ItemSelected="OnStoryViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding StoryName}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <ListView x:Name="listViewCharacter" Margin="20" ItemSelected="OnCharacterViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding CharacterName}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <ListView x:Name="listView" Margin="20" ItemSelected="OnWorldViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding WorldName}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>